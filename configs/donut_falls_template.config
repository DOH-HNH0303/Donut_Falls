params.outdir = 'donut_falls'

//# Docker Images -------------------------------------------
nanoplot_container  = 'staphb/nanoplot:latest'
flye_container      = 'staphb/flye:latest'
filtlong_container  = 'staphb/filtlong:latest'
miniasm_container   = 'staphb/minipolish:latest'
any2fasta_container = 'staphb/any2fasta:latest'
raven_container     = 'staphb/raven:latest'
medaka_container    = 'ontresearch/medaka:latest'
fastp_container     = 'staphb/fastp:latest'
polca_container     = 'staphb/masurca:latest'
unicycler_container = 'staphb/unicycler:latest'
trycycler_container = 'staphb/trycycler:latest'

//# Workflow paramters --------------------------------------

process {
  publishDir = [ path: params.outdir, mode: 'copy' ]

  withName:'nanoplot_.*'{
    container = nanoplot_container
  }
  withName:fastp{
    container = fastp_container
  }
  withName:filtlong{
    container = filtlong_container
  }
  withName:flye{
    container = flye_container
  }
  withName:miniasm{
    container = miniasm_container
  }
  withName:any2fasta{
    container = any2fasta_container
  }
  withName:raven{
    container = raven_container
  }
  withName:medaka{
    container = medaka_container
  }
  withName:polca{
    container = polca_container
  }
  withName:'trycycler_.*'{
    container = trycycler_container
  }
  withName:unicycler{
    container = unicycler_container
  }
}
