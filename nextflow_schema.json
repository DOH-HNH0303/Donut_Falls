{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/UPHL-BioNGS/Donut_Falls/main/nextflow_schema.json",
    "title": "Donut Falls Parameters",
    "description": "Donut Falls is a workflow for assembly from nanopore or nanopore/illumina reads",
    "type": "object",
    "properties": {
        "assembler": { 
            "type": "string", 
            "description": "Specifies which assembler is going to be used.",
            "enum": ["unicycler", "raven", "flye", "miniasm", "masurca", "lr_unicycler"],
            "default" : "flye",
            "hidden": true
        },
        "bandage_options":{
            "type": "string",
            "description": "options for process",
            "hidden": true
        },
        "busco_options": {
            "type": "string",
            "description": "options for process",
            "hidden": true
        },
        "circlator_options": {
            "type": "string",
            "description": "options for process",
            "hidden": true
        },
        "config_file": {
            "type": "boolean",
            "description" : "Specifies if a config file is copied for the end user. Ends script.",
            "hidden" : true
        },
        "dragonflye_options": {
            "type": "string",
            "description": "options for process",
            "hidden": true
        },
        "enable_porechop": {
            "type": "boolean",
            "description": "Allows porechop before filtlong",
            "default": false,
            "hidden": true
        },
        "fastp_options": { 
            "type": "string", 
            "description": "Options for process",
            "hidden": true
        },
        "filtlong_options": { 
            "type": "string", 
            "description": "Options for process",
            "hidden": true
        },
        "flye_options": { 
            "type": "string", 
            "description": "Options for process",
            "hidden": true
        },
        "gfastats_options": {
            "type": "string",
            "description": "Options for process",
            "hidden": true
        },
        "masurca_options": {
            "type": "string",
            "description": "Options for process",
            "hidden": true
        },
        "medaka_options": { 
            "type": "string", 
            "description": "Options for process",
            "hidden": true
        },
        "multiqc_options":{
            "type": "string",
            "description": "Options for process",
            "hidden": true
        },
        "nanoplot_options": { 
            "type": "string", 
            "description": "Options for process",
            "hidden": true
        },
        "nanoplot_summary_options": { 
            "type": "string", 
            "description": "Options for process",
            "hidden": true
        },
        "outdir": { 
            "type": "string", 
            "description": "Specifies where results are saved",
            "hidden": false,
            "default": "donut_falls"
        },
        "polca_options": { 
            "type": "string", 
            "description": "Options for process",
            "hidden": true
        },
        "porechop_options": {
            "type": "string",
            "description": "Options for process",
            "hidden": true
        },
        "quast_options": {
            "type": "string",
            "description": "Options for process",
            "hidden": true
        },
        "rasusa_options": {
            "type": "string",
            "description": "Options for process",
            "hidden": true
        },
        "raven_options": { 
            "type": "string", 
            "description": "Options for process",
            "hidden": true
        },
        "reads": { 
            "type": "string", 
            "description": "input channel for nanopore reads",
            "hidden": true
        },
        "remove": {
            "type": "string",
            "description": "csv file with sample,cluster,contig to remove in Trycycler reconcile",
            "hidden": true
        },
        "sample_sheet": {
            "type": "string",
            "description": "csv file with sample,nanopore fastq file,illumina R1 (optional),illuimina R1 (optional)",
            "hidden": false
        },
        "sequencing_summary": { 
            "type": "string", 
            "description": "input channel for nanopore sequencing summary file (optional)",
            "hidden": false
        },
        "test_wf":{
            "type": "boolean",
            "description": "Downloads test file",
            "default": false,
            "hidden": true
        },
        "trycycler_cluster_options":{
            "type" : "string",
            "description": "Options for process",
            "hidden": true
        },
        "trycycler_consensus_options":{
            "type" : "string",
            "description": "Options for process",
            "hidden": true
        },
        "trycycler_dotplot_options":{
            "type" : "string",
            "description": "Options for process",
            "hidden": true
        },
        "trycycler_min_fasta": {
            "type": "integer",
            "description": "The minimum number of fastas needed for Trycycler reconcile",
            "hidden": true,
            "default": 6
        },
        "trycycler_msa_options":{
            "type" : "string",
            "description": "Options for process",
            "hidden": true
        },
        "trycycler_partition_options":{
            "type" : "string",
            "description": "Options for process",
            "hidden": true
        },
        "trycycler_reconcile_options":{
            "type" : "string",
            "description": "Options for process",
            "hidden": true
        },
        "trycycler_subsample_options":{
            "type" : "string",
            "description": "Options for process",
            "hidden": true
        },
        "unicycler_options": { 
            "type": "string", 
            "description": "Options for process",
            "hidden": true
        }
    }
}